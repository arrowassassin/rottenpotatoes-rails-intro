<h2>All Movies</h2>

<%#  Part 1: Start here... %>
<%= form_tag movies_path({"refresh":1}), :id => 'ratings_form', :method => :get do %>
  
  Include:
  
  <% @ratings.each do |rating| %>
    <div class="form-check  form-check-inline">
      <%= label_tag "ratings[#{rating}]", rating, class: 'form-check-label', :style=> 'padding:3px;'%>
      <%= check_box_tag "ratings[#{rating}]", "True",  @ratings_checks.include?(rating), class: 'form-check-input' %>
    </div>
  <% end %>
  <%= submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary'%>
<% end %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
	    <th <% if @sort == 'title' %> class = "hilite bg-warning" <% end %>  > <%= link_to "Movie Title", movies_path({:sort=>"title", :ratings => @ratings_checks.each_with_object({}) {|x, y| y[x] = "True"}}), id: "title_header" %></th>
      <th>Rating</th>
      <th <% if @sort == 'release_date' %> class = "hilite bg-warning" <% end %> > <%= link_to "Release Date", movies_path({:sort=>"release_date", :ratings => @ratings_checks.each_with_object({}) {|x, y| y[x] = "True"}}), id: "release_date_header" %></th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
		<%= link_to "More about #{movie.title}", movie_path(movie, {:page=>1}) %>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>